<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_color"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FCFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/guideline3" />

    <TextView
        android:id="@+id/textview_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비 오는 날엔.."
        android:textAllCaps="false"
        android:textColor="#111111"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="@+id/guideline2" />

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삼삼"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        android:textColor="#111111"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintBottom_toTopOf="@+id/textview_tag"/>

    <TextView
        android:id="@+id/textview_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#해물파전 #동동주 #좋아요21"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#111111"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"

        app:layout_constraintTop_toBottomOf="@+id/textview_name"
        app:layout_constraintStart_toStartOf="@+id/guideline1" />

    <Button
        android:id="@+id/button_look"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="자세히 보기>>"
        android:background="#00ff0000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#111111"
        app:layout_constraintTop_toBottomOf="@+id/textview_tag"
        app:layout_constraintEnd_toEndOf="@+id/guideline2"
        />

    <Button
        android:id="@+id/button_nolook"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:background="#00ff0000"
        android:text="다음에 갈래요"
        android:textColor="#111111"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="70dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="150dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>
